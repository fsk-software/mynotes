<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.fsk.mynotes"
          android:installLocation="auto">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".MyNotesApplication"
        android:label="@string/app_name"
        android:icon="@drawable/my_icon"
        android:theme="@style/AppTheme">


        <activity android:name=".presentation.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".presentation.activity.EditNoteActivity"
                  android:theme="@style/SingleNoteTheme" />

        <service android:name=".services.SaveNoteService"
                 android:exported="false" />
        <service android:name=".services.DeleteNoteService"
                 android:exported="false" />

        <!-- Test Mock Activities -->
        <activity
            android:name=".presentation.animations.filter_toolbar.MockActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.fragments.MockFragmentActivity"
            android:exported="false" />


    </application>

</manifest> 