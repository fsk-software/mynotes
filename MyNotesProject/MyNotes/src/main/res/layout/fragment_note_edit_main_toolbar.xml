<?xml version="1.0" encoding="utf-8"?>

<com.fsk.common.presentation.components.FractionalFrameLayout
    style="@style/NoteEditToolbar"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/fragment_note_edit_header_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/delete_note_background"/>

        <ImageView
            android:id="@+id/fragment_note_edit_header_color_palette"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/color_palette_background"/>

        <ImageView
            android:id="@+id/fragment_note_edit_header_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@id/fragment_note_edit_header_color_palette"
            android:src="@drawable/save_note_background"/>

    </RelativeLayout>
</com.fsk.common.presentation.components.FractionalFrameLayout>