<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
 	xmlns:note="http://schemas.android.com/apk/res/com.fsk.mynotes"
	android:orientation="vertical" 
	android:layout_width="300dip"
	android:layout_height="wrap_content"
  	android:scrollbars="vertical"
  	android:background="@android:color/black">
 	<ScrollView 
 		android:layout_width="fill_parent" 
 		android:layout_height="fill_parent">
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"	
			android:orientation="vertical"
			android:paddingRight="10dip"
			android:paddingLeft="5dip"
			android:paddingTop="5dip"
			android:paddingBottom="5dip">
			<com.fsk.mynotes.presentation.components.ColorSelector
			    android:id="@+id/note_edit_colors"
       			android:layout_width="fill_parent"
       			android:layout_height="40dip"
				android:layout_gravity="center"
				android:layout_alignParentTop="true"
       			android:background="@android:color/black"
    			android:scrollingCache="true" 
    			android:smoothScrollbar="true"
    			android:stretchMode="spacingWidthUniform"
        		note:orientation="horizontal"
				note:minChildDimX="50dip"
				note:minChildDimY="35dip"/>
			<View
				android:layout_width="fill_parent"
				android:layout_height="3dip"
				android:layout_marginTop="5dip"
				android:layout_marginBottom="5dip"
				android:background="#6c806e"/>
		   	<RelativeLayout 
				android:id="@+id/note_edit_header" 
				android:layout_width="fill_parent"
		  		android:layout_height="30dip"
		  		android:paddingLeft="5dip"
		  		android:paddingRight="5dip">
		   	</RelativeLayout>
			<EditText 
				android:id="@+id/note_edit_text" 
				android:layout_width="fill_parent"
				android:layout_height="150dip"
				android:scrollbars="vertical"
				android:gravity="top|left"
				android:textColor="@android:color/black"
				android:layout_marginBottom="5dip"/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>