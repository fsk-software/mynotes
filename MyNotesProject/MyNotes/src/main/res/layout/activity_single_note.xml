<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <com.fsk.mynotes.presentation.components.NoteEditToolbar
        android:id="@+id/activity_single_note_toolbar"
        style="@style/NoteEditToolbar" />
<View
    android:layout_width="match_parent"
    android:layout_height="3dp"
    android:background="@color/accentColor" />

    <FrameLayout
        android:id="@+id/activity_single_note_edit_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="75dp"
        android:padding="@dimen/note_border_dimen">

        <EditText
            android:id="@+id/activity_single_note_edit_text"
            style="@style/SingleNoteEditItem"/>
    </FrameLayout>



</RelativeLayout>