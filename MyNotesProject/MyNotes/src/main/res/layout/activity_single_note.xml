<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <FrameLayout
        android:id="@+id/activity_single_note_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"/>

    <FrameLayout
        android:id="@+id/activity_single_note_edit_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/note_border_dimen"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="75dp">

        <EditText
            android:id="@+id/activity_single_note_edit_text"
            style="@style/SingleNoteEditItem"/>
    </FrameLayout>

</RelativeLayout>