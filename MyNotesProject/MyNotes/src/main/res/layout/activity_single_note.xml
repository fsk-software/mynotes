<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:elevation="10sp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_note_edit_options_bar_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <Spinner
            android:id="@+id/activity_single_note_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:background="@null"
            android:overlapAnchor="false"
            android:dropDownWidth="wrap_content"
            android:popupBackground="@color/note_gray_translucent"
            android:src="@drawable/icon_delete"
            android:layout_marginRight="7.5dp"
            android:layout_marginLeft="7.5dp"/>

        <ImageView
            android:id="@+id/activity_single_note_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:contentDescription="@string/delete"
            android:src="@drawable/icon_delete"
            android:layout_marginRight="7.5dp"
            android:layout_marginLeft="7.5dp"/>

    </android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/activity_single_note_edit_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"
        android:background="@android:color/transparent"
        android:hint="@string/note_hint"
        android:padding="10dp"/>

</LinearLayout>