<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Common attributes for the primary toolbar in the main activity -->
    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/DarkToolbarTheme</item>
    </style>

    <!-- Common attributes for the primary toolbar in the main activity -->
    <style name="MainToolbar" parent="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/activity_toolbar_height</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/DarkToolbarTheme</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
    </style>

    <!-- Common attributes for the primary toolbar in the main activity -->
    <style name="NoteEditToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
    </style>


    <!-- Common attributes for the add note button in main activity -->
    <style name="AddNoteButton">
        <item name="android:layout_width">@dimen/add_button_size</item>
        <item name="android:layout_height">@dimen/add_button_size</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">@dimen/add_button_top_margin</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/add_button_background</item>
        <item name="android:elevation">@dimen/add_note_button_elevation</item>
        <item name="android:stateListAnimator">@animator/color_filter_item_selector</item>
    </style>

    <!-- The common attributes for the color filter container -->
    <style name="ColorFilterContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:elevation">@dimen/color_filter_toolbar_elevation</item>

        <item name="android:divider">?android:attr/listDivider</item>
        <item name="android:dividerPadding">5dip</item>
        <item name="android:showDividers">middle</item>
    </style>


    <!-- The common attributes for the color filter items -->
    <style name="ColorFilterItem">
        <item name="android:textOn"> </item>
        <item name="android:textOff"> </item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:stateListAnimator">@animator/color_filter_item_selector</item>
    </style>


    <style name="EditToolbarOption">
        <item name="android:stateListAnimator">@animator/edit_toolbar_option_press_anim</item>
    </style>

</resources>